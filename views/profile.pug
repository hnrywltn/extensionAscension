extends layout.pug

block content
    div
        div
            img(src= user.profileImg)
        div
            h1= user.name
        div
            h2 @#{user.userName}
        div
            button(type="submit") Edit Profile
    div
        h3= Extensions
        each product in products
          div
            img(src=product.imgUrl class="productImg" alt="product image" style="width:100px")
          div Extension Name
            p=product.productName
          div Creator Username
            p=user.userName
          div Extension Description
            p=product.description
